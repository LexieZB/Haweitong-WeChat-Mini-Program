/* pages/me/me.wxss */
@import "/image/font/iconfont.wxss";
page{
  background:#fffefe;
}
.myInfo{
  background: #3197ed;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 50rpx;
  box-sizing: border-box;
}
.myInfo image{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.uploader-container{
  display: flex;
  justify-content: space-around;
}
.name{
  color: #fff;
  font-size: 36rpx;
  margin: 30rpx 20rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.count{
  box-sizing: border-box;
  color: #fff;
  padding-top: 35rpx;
}

.info_left{
  display: flex;
  justify-content: space-around;
}
.myInfo button{
  background: #fff;
  width: 100rpx;
}
.other-item{
  border-bottom: 1rpx solid #ccc;
  height: 130rpx;
  padding:8rpx;
  line-height: 150rpx;
  display: flex;
  justify-content: space-between;
  font-size: 38rpx;
}
.iconfont{
  margin-right: 25rpx;
  font-size: 55rpx;
  width: 66rpx;
}
.other-item image{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 66rpx;}
  
  .icon-wodetiezi{
  position: relative;
  left: -15rpx;
  color: #3197ed;
}

  .icon-shoucang{
  color:#3197ed;
}

  .icon-tousu{
  color:#FC781E;
}
.kefu{
  /* display: inline-block; */
  display: flex;
  color: #000; 
  border-radius: 50rpx;
  line-height: 130rpx;
  margin-left: 0 !important; 
  background: #F3F6FF;
  position: relative;
   left: -30rpx; 
}
